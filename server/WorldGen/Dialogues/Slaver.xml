<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<dialogues>
	<dialogue name="SLAVER_TRADER">
		<start>M0</start>
		<message id="M0" text="[ACTION]You see a pirate.">
			<reply id="R1" text="[SKIP][AUTO]" next="M1">
				<condition type="SERVER_VARIABLE_PRESENT">
					<condition_param var_name="[SECTOR] SLAVER_PROVOKED"></condition_param>
					<condition_param var_value="1"></condition_param>
				</condition>
			</reply>
			<reply id="R2" text="[SKIP][AUTO]" next="M2">
				<condition type="SERVER_VARIABLE_ABSENT">
					<condition_param var_name="[SECTOR] SLAVER_PROVOKED"></condition_param>
					<condition_param var_value="1"></condition_param>
				</condition>				
				<condition type="SHIP_COMBAT_ABSENT">
					<condition_param target_player="0"></condition_param>
				</condition>
			</reply>
			<reply id="R3" text="[SKIP][AUTO]" next="F1">
				<condition type="SERVER_VARIABLE_ABSENT">
					<condition_param var_name="[SECTOR] SLAVER_PROVOKED"></condition_param>
					<condition_param var_value="1"></condition_param>
				</condition>
				<condition type="SHIP_COMBAT_PRESENT">
					<condition_param target_player="0"></condition_param>
				</condition>
			</reply>
		</message>
			
		<message id="F1" text="Connection terminated from the other end."></message>
	
		<message id="M1" text="You will make good slaves.">
			<reply id="R1" text="We'll see about that."></reply>
		</message>
	
		<message id="M3" text="Oh, I hope you survive what's coming next, pal. >:D">
			<event id="SECTOR_SLAVER_PROVOKED" target="PLAYER"></event>
		</message>
		
		<message id="M4" text="Sorry, pal, we're all out."></message>
		
		<message id="M2" text="Are you here to buy one of the slaves?">
			<reply id="R1" text="I'm here to remove you from existence you slaver scum!" next="M3"></reply>
			<reply id="R2" text="Yes, I would like to buy one." next="M4">
				<condition type="SERVER_VARIABLE_BIGGER">
					<condition_param var_name="[SECTOR] [MOB_ID] SLAVES_SOLD"></condition_param>
					<condition_param var_value="2"></condition_param>
				</condition>				
			</reply>
			<reply id="R3" text="Yes, I would like to buy one." next="M5">
				<condition type="SERVER_VARIABLE_SMALLER">
					<condition_param var_name="[SECTOR] [MOB_ID] SLAVES_SOLD"></condition_param>
					<condition_param var_value="3"></condition_param>
				</condition>
			</reply>
		</message>
		
		<message id="M5" text="It's 300 for 1 slave.">
			<reply id="R1" text="Alright, I'm transferring the scrap." next="M7">
				<condition type="SHIP_SCRAP_PRESENT">
					<condition_param target_player="1"></condition_param>
					<condition_param qty="300"></condition_param>
				</condition>
			</reply>
			<reply id="R2" text="I don't have that much right now." next="M6">
				<condition type="SHIP_SCRAP_ABSENT">
					<condition_param target_player="1"></condition_param>
					<condition_param qty="300"></condition_param>
				</condition>
			</reply>
		</message>
		
		<message id="M6" text="Then don't waste my time."></message>

		<message id="M7" text="Good. I'll transfer the slave to your ship.">
			<event id="REMOVE_SLAVE_PRICE_FROM_PLAYER" target="PLAYER"></event>
			<event id="ADD_SLAVE_PRICE_TO_SLAVER" target="NPC"></event>
			<event id="SPAWN_WORKER_ON_SHIP" target="PLAYER"></event>
			<event id="SECTOR_SLAVES_SOLD" target="NPC"></event>
		</message>
		
	</dialogue>
</dialogues>
